<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soft1851.music.admin.mapper.SongMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.soft1851.music.admin.domain.entity.Song">
        <id column="song_id" property="songId" />
        <result column="song_name" property="songName" />
        <result column="sort_id" property="sortId" />
        <result column="singer" property="singer" />
        <result column="duration" property="duration" />
        <result column="thumbnail" property="thumbnail" />
        <result column="url" property="url" />
        <result column="lyric" property="lyric" />
        <result column="comment_count" property="commentCount" />
        <result column="like_count" property="likeCount" />
        <result column="play_count" property="playCount" />
        <result column="delete_flag" property="deleteFlag" />
        <result column="update_time" property="updateTime" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <select id="getSongByTimeParagraph" resultType="com.soft1851.music.admin.domain.entity.Song" >
        SELECT * FROM song
        WHERE 1=1
        <if test="timeDto.yesterday !=null">
            AND TO_DAYS(create_time) = TO_DAYS(NOW());
        </if>
        <if test="timeDto.week != null">
            AND  YEARWEEK(date_format(create_time,'%Y-%m-%d')) = YEARWEEK(now())
        </if>
        <if test="timeDto.month!=null">
            AND DATE_FORMAT( create_time, '%Y%m' ) = DATE_FORMAT( CURDATE( ) , '%Y%m' )
        </if>
        <if test="timeDto.quarter !=null">
            AND create_time > DATE_SUB(CURDATE(), INTERVAL 3 MONTH)
        </if>

    </select>
    <!-- 查询所有的 Song -->
    <select id="selectAll" resultType="com.soft1851.music.admin.domain.entity.Song">
        SELECT song_id, song_name, sort_id, singer, duration,
               thumbnail, url, comment_count, like_count, play_count,
               delete_flag, update_time, create_time
        FROM music.song
    </select>



</mapper>
